{
  "name": "Hello World!",
  "description": "My first Chrome App.",
  "version": "0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["example-opt.js"]
    }
  },
  "permissions": [
    "webview",
    "idle",
    "storage"
  ],
  "externally_connectable": {
    "matches": ["*://*.auviknetworks.atlassian.net/*"]
  },
  "offline_enabled": true,
  "sockets": {
    "tcp": {
      "connect": "*"
    },
    "udp": {
      "send": "*"
    }
  },

  "icons": { "16": "calculator-16.png", "128": "calculator-128.png" }
}